<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorControlNormal">@color/colourWhite</item>
        <item name="colorControlActivated">@color/colourWhite</item>
        <item name="android:textColorHint">@color/colourWhite</item>
        <item name="colorControlHighlight">@color/colourWhite</item>
    </style>

        <style name="TransparentTheme" parent="Theme.AppCompat.Light.NoActionBar">
            <item name="android:windowIsTranslucent">true</item>
            <item name="android:windowBackground">@android:color/transparent</item>
            <item name="android:windowContentOverlay">@null</item>
            <item name="android:windowNoTitle">true</item>
            <item name="android:windowIsFloating">true</item>
            <item name="android:backgroundDimEnabled">false</item>
        </style>

    <style name="RoundedButton" parent="Widget.AppCompat.Button.Borderless">
       <item name="android:background">@drawable/round_button_drawable</item>
        <item name="paddingStart">20dp</item>
        <item name="android:textSize">12sp</item>
        <item name="elevation">2dp</item>
        <item name="paddingEnd">20dp</item>
        <item name="android:textColor">@color/colourWhite</item>
        <item name="android:minWidth">150dp</item>
    </style>
    
    <style name="ErrorTextTheme">
        <item name="android:textSize">@dimen/error_text_size</item>
        <item name="android:textColor">@color/colourWhite</item>
    </style>

    <style name="GenericHeaderTextTheme">
        <item name="android:textSize">@dimen/error_text_size</item>
        <item name="android:textColor">@color/colourWhite</item>
    </style>

    <style name="ErrorText" parent="TextAppearance.Design.Error">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colourRed</item>
    </style>
    <style name="HintText" parent="@android:style/TextAppearance">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colourWhite</item>
    </style>

    <style name="TextInputLayoutTheme" parent="Widget.Design.TextInputLayout">
        <item name="hintTextAppearance">@style/HintText</item>
        <item name="errorTextAppearance">@style/ErrorText</item>
        <item name="android:textColor">@color/colourWhite</item>
        <item name="android:textColorHint">@color/colourWhite</item>
        <item name="android:backgroundTint">@color/colourWhite</item>
        <item name="colorControlNormal">@color/colourWhite</item>
        <item name="colorControlActivated">@color/colourWhite</item>
        <item name="colorControlHighlight">@color/colourWhite</item>
    </style>

    <style name="TextInputEditTextTheme">
        <item name="backgroundTint">@color/colourWhite</item>
        <item name="android:textColor">@color/colourWhite</item>
        <item name="android:textColorHint">@color/colourWhite</item>
        <item name="hintTextAppearance">@style/HintText</item>
        <item name="colorControlNormal">@color/colourWhite</item>
        <item name="colorControlActivated">@color/colourWhite</item>
    </style>

    <style name="BolTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colourWhite</item>
    </style>

</resources>